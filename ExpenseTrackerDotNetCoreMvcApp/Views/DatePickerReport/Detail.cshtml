@model CustomMonthPieChartModel
@{
    Layout = null;
}
<div id="chart">
</div>
<script>
        var options = {
            series: @(Html.Raw(JsonConvert.SerializeObject(Model.CustomMonthPieChartLabel))),
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: ['Expense', 'Income'],
            tooltip: {
                y: {
                    formatter: function (val) {
                        return "$ " + val + " thousands"
                    }
                }
            },
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
</script>