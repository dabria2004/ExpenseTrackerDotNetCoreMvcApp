<div class="col-xl-6">
    <div class="card your_balance">
        <div class="card-header border-0">
            <div>
                <h2 class="heading mb-1">Your Balance</h2>
                <span>June 1, 2020, 08:22 AM</span>
            </div>
        </div>
        <div class="card-body pt-0 custome-tooltip">
            <div class="row gx-0">
                <div class="col-xl-12 col-sm-12" style="position: relative;">
                    <div id="chart"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xl-6">
    <div class="card your_balance">
        <div class="card-header border-0">
            <div>
                <h2 class="heading mb-1">Your Balance</h2>
                <span>June 1, 2020, 08:22 AM</span>
            </div>
        </div>
        <div class="card-body pt-0 custome-tooltip">
            <div class="row gx-0">
                <div class="col-xl-12 col-sm-12" style="position: relative;">
                    <span>Current Month</span>
                    <div id="pie_chart"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var options = {
            series: [{
                name: 'Income',
                data: @(Html.Raw(JsonConvert.SerializeObject(ViewBag.line_chart.LineChartIncomeLabel)))
                                                            }, {
                name: 'Expense',
                data: @(Html.Raw(JsonConvert.SerializeObject(ViewBag.line_chart.LineChartExpenseLabel)))
                                                            }],
            chart: {
                type: 'bar',
                height: 350
            },
            plotOptions: {
                bar: {
                    horizontal: false,
                    columnWidth: '55%',
                    endingShape: 'rounded'
                },
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                show: true,
                width: 2,
                colors: ['transparent']
            },
            xaxis: {
                categories: @(Html.Raw(JsonConvert.SerializeObject(ViewBag.line_chart.LineCharYearLabel))),
            },
            yaxis: {
                title: {
                    text: '$ (thousands)'
                }
            },
            fill: {
                opacity: 1
            },
            tooltip: {
                y: {
                    formatter: function (val) {
                        return "$ " + toNumberStr(val);
                    }
                }
            }
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();

        var pie_options = {
            series: @(Html.Raw(JsonConvert.SerializeObject(ViewBag.pie_chart.PieChartLabel))),
            chart: {
                width: 380,
                type: 'pie',
            },
            labels: ['Expense', 'Income'],
            tooltip: {
                y: {
                    formatter: function (val) {
                        return "$ " + toNumberStr(val);
                    }
                }
            },
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                },
            }],

        };

        var chart = new ApexCharts(document.querySelector("#pie_chart"), pie_options);
        chart.render();
    </script>
}